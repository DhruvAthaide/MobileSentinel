<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#021526">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnDetectOverlays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detect Overlay Apps"
            android:textColor="#EEEEEE"
            android:backgroundTint="#2F58CD" />

        <Button
            android:id="@+id/btnScanApps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan Installed Apps"
            android:textColor="#EEEEEE"
            android:backgroundTint="#2F58CD" />

        <Button
            android:id="@+id/btnEnableService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Accessibility Service"
            android:textColor="#EEEEEE"
            android:backgroundTint="#2F58CD" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Results:"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:scrollbars="vertical"
            android:textColor="#EEEEEE" />

    </LinearLayout>
</ScrollView>
