<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#021526">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Password Generator Text -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password Generator"
            android:textSize="30sp"
            android:textColor="#EEEEEE"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="20dp" />

        <!-- Password Display -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Generated Password"
            android:gravity="center"
            android:focusable="false"
            android:background="#EEEEEE"
            android:textColor="#021526"
            android:textSize="18sp"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp" />

        <!-- Slider for Password Length -->
        <TextView
            android:id="@+id/tvLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password Length: 8"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#EEEEEE" />

        <SeekBar
            android:id="@+id/seekBarLength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="32"
            android:progress="8" />

        <!-- Checkboxes -->
        <CheckBox
            android:id="@+id/cbIncludeLowercase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Include Lowercase Letters"
            android:layout_marginTop="12dp"
            android:textColor="#EEEEEE"
            android:textSize="16sp"
            android:buttonTint="#EEEEEE" />

        <CheckBox
            android:id="@+id/cbIncludeUppercase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Include Uppercase Letters"
            android:layout_marginTop="8dp"
            android:textColor="#EEEEEE"
            android:textSize="16sp"
            android:buttonTint="#EEEEEE" />

        <CheckBox
            android:id="@+id/cbIncludeNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Include Numbers"
            android:layout_marginTop="8dp"
            android:textColor="#EEEEEE"
            android:textSize="16sp"
            android:buttonTint="#EEEEEE" />

        <CheckBox
            android:id="@+id/cbIncludeSymbols"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Include Symbols"
            android:layout_marginTop="8dp"
            android:textColor="#EEEEEE"
            android:textSize="16sp"
            android:buttonTint="#EEEEEE" />

        <CheckBox
            android:id="@+id/cbIncludeSpaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Include Spaces"
            android:layout_marginTop="8dp"
            android:textColor="#EEEEEE"
            android:textSize="16sp"
            android:buttonTint="#EEEEEE" />

        <CheckBox
            android:id="@+id/cbExcludeDuplicates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exclude Duplicates"
            android:layout_marginTop="8dp"
            android:textColor="#EEEEEE"
            android:textSize="16sp"
            android:buttonTint="#EEEEEE" />

        <!-- Generate Password Button -->
        <Button
            android:id="@+id/btnGenerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generate Password"
            android:backgroundTint="#228B22"
            android:textColor="#EEEEEE"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Copy to Clipboard Button -->
        <Button
            android:id="@+id/btnCopy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Copy to Clipboard"
            android:backgroundTint="#2F58CD"
            android:textColor="#EEEEEE"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>